{
    "name": "clarity-log",
    "private": true,
    "workspaces": [
        "frontend/*",
        "backend/*",
        "shared/*"
    ],
    "scripts": {
        "dev:web": "npm --workspace frontend/web run dev",
        "dev:api": "npm --workspace backend/api run dev",
        "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\""
    },
    "devDependencies": {
        "concurrently": "^9.0.0"
    }
}