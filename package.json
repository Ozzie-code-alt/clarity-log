{
    "name": "clarity-log",
    "private": true,
    "workspaces": [
        "frontend/*",
        "backend/*",
        "shared/*"
    ],
    "scripts": {
        "dev:web": "pnpm --workspace frontend/web run dev",
        "dev:api": "pnpm --workspace backend/api run dev",
        "dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:api\""
    },
    "devDependencies": {
        "concurrently": "^9.0.0"
    }
}